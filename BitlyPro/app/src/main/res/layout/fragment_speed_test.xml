<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.speedtest.SpeedTestFragment">

    <TextView
        android:id="@+id/tv_speed_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet Speed Test"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textColor="@color/primary" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_start_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:layout_margin="16dp"
        android:onClick="startSpeedTest" />

    <Button
        android:id="@+id/btn_stop_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Test"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:onClick="stopSpeedTest" />

    <TextView
        android:id="@+id/tv_download_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Speed: 0 Mbps"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@color/secondary" />

    <TextView
        android:id="@+id/tv_upload_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Speed: 0 Mbps"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@color/secondary" />

</LinearLayout>